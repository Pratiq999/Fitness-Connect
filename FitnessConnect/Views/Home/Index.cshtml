@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    
<!-- Hero Section -->
<section class="hero-section text-center">
    <div class="container">
        <h1 class="display-4">Welcome to Fitness Connect</h1>
        <p class="lead">Connect with fitness enthusiasts, track your progress, and achieve your fitness goals!</p>
        <a href="#" class="btn btn-primary btn-lg">Get Started</a>
    </div>
</section>
<!-- Exercise View -->
<section class="exercise-view-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2 class="text-center">Generated Exercise View</h2>
                <div class="card">
                    <img src="https://via.placeholder.com/600" class="card-img-top" alt="Exercise Image">
                    <div class="card-body">
                        <h5 class="card-title">Exercise Name</h5>
                        <p class="card-text">Description of the exercise goes here. This is a brief explanation of how to perform the exercise and its benefits.</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Category:</strong> Strength Training</li>
                            <li class="list-group-item"><strong>Difficulty:</strong> Intermediate</li>
                            <li class="list-group-item"><strong>Duration:</strong> 15 minutes</li>
                        </ul>
                        <a href="#" class="btn btn-primary mt-3">Start Exercise</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="feature-box text-center">
                    <i class="bi bi-person"></i>
                    <h3>User Profiles</h3>
                    <p>Create your personalized fitness profile and share your achievements with the community.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-box text-center">
                    <i class="bi bi-heart"></i>
                    <h3>Track Progress</h3>
                    <p>Track your fitness journey with our easy-to-use progress tracking tools.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-box text-center">
                    <i class="bi bi-chat"></i>
                    <h3>Community Chat</h3>
                    <p>Connect with other fitness enthusiasts, share tips, and motivate each other.</p>
                </div>
            </div>
        </div>
    </div>
</section>
</div>
