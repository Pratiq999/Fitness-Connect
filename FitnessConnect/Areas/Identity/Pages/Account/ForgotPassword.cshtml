@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = null;
}

<head>
    <link href="/css/site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="shortcut icon" href="/ftc_logo.png" />

</head>
<div class="signup">
    <div class="whitebox">
        <div class="d-flex justify-content-center mt-5">
            <img src="/ftc_logo.png"
                 class="w-50 mx-auto" />
        </div>
        <h4 class="text-center mt-3">Forgot Password</h4>
        <div class="innercontent">
            <form method="post">
                <div class="form-container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group LoginPage">
                                <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="email" aria-required="true" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
