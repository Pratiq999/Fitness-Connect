@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<head>
    <link href="/css/site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="shortcut icon" href="/ftc_logo.png" />

</head>
<div class="signup">
    <div class="whitebox">
        <div class="d-flex justify-content-center mt-5">
            <img src="/ftc_logo.png"
                 class="w-50 mx-auto" />
        </div>
        <h4 class="text-center mt-3">Login</h4>
        <div class="innercontent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form class="form" id="account" method="post">
                <div class="form-container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group LoginPage">
                                <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="email" aria-required="true" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group LoginPage">
                                <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="current-password" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="checkbox d-flex justify-content-center">
                        <label asp-for="Input.RememberMe" class="form-label ps-0 pb-2">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="d-flex row mb-5">
                        <button id="login-submit" type="submit" style="background-color: #04233b;" class="btn text-light w-50 mx-auto">Log in</button>
                    </div>
                    <a href="/identity/account/register">Are You a New User? Register here</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
